{% extends "layout.html.twig" %}


{% block title 'Historique de commandes' %}
    
    
{% block content %}

    <h1 class="text-center">Votre historique des commandes</h1>
    
    <table class="table table-striped table-bordered">
        <thead>
            <th class="text-center">Date</th>
            <th class="text-center">Montant</th>
            <th class="text-center">Nombre de jetons</th>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr class="text-center">
                    <td>{{ order.orderdate|date('d/m/Y - H:m:s') }}</td>
                    <td>{{ order.amount }}</td>
                    <td>{{ order.nbOfTokens }}</td>
                </tr>
            {% endfor %}
        </tbody>
        
        
    </table>

{% endblock %}
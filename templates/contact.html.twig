{% extends "layout.html.twig" %}

{% block content %}
    <form action="#" method="post">
            <H3>Notre équipe vous répond !</H3>
            <div class="form-group">
                <label>Nom</label>
                <input type="text" name="lastname" id="lastname" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Téléphone</label>
                <input type="tel" name="telephone" id="telephone" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Vos questions</label>
                <!-- ajouter un name pour les questions en fonction de la bdd -->
                <textarea id="" name="" cols="30" rows="10" class="form-control"></textarea>
            </div>
        <button type="submit"  class="btn btn-primary btn-submit">ENVOYER</button
    </form>
    
{% endblock %}